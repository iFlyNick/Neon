{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.Extensions.Http": "Warning",
        "System.Net.Http": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithThreadId", "WithThreadName" ],
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Seq",
              "Args": {
                "serverUrl": "http://cooper.local:5341"
              }
            }
          ]
        }
      },
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] | {ThreadId} - {ThreadName} | [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "TwitchSettings": {
    "OAuthUrl": "https://id.twitch.tv/oauth2/token",
    "OAuthValidateUrl": "https://id.twitch.tv/oauth2/validate",
    "HelixApiUrl": "https://api.twitch.tv/helix",
    //"EventSubUrl": "ws://192.168.1.5:8090/ws",
    //"EventSubscriptionUrl": "http://192.168.1.5:8090/eventsub/subscriptions"
    "EventSubUrl": "wss://eventsub.wss.twitch.tv/ws",
    "EventSubscriptionUrl": "https://api.twitch.tv/helix/eventsub/subscriptions"
  },
  "ConnectionStrings": {
    "NeonDb": "Host=cooper.local;Port=5432;User Id=postgres;Password=postgres;Database=Neon"
  },
  "BaseKafkaConfig": {
    "BootstrapServers": "cooper.local:9092"
  },
  "NeonStartupSettings" : {
    "EmoteApiUrl": "http://cooper.local:5001/api/Emotes/v1/",
    "EmoteChannelUri": "AllChannelEmotes",
    "EmoteGlobalUri": "AllGlobalEmotes"
  }
}
